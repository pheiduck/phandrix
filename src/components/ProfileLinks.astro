---
interface Props {
	title: string;
	href: string;
}

const { title, href } = Astro.props;

// Map URL to Dashboard Icon URLs
function getIconUrl(url: string): string {
  if (url.includes("github.com")) return "https://dashboardicons.com/icons/github";
  if (url.includes("gitlab")) return "https://dashboardicons.com/icons/gitlab";
  if (url.includes("discord")) return "https://dashboardicons.com/icons/discord";
  if (url.includes("linkedin.com")) return "https://dashboardicons.com/icons/linkedin";
  if (url.includes("youtube.com")) return "https://dashboardicons.com/icons/youtube";
  if (url.includes("forum.manjaro.org")) return "https://dashboardicons.com/icons/manjaro";
  return "https://dashboardicons.com/icons/default"; // fallback icon
}

const iconUrl = getIconUrl(href);
---

<li class="link-card">
  <a href={href} target="_blank" rel="noopener noreferrer">
    <h2>
      <img src={iconUrl} alt={title} class="link-icon" />
      {title}
      <span>&rarr;</span>
    </h2>
  </a>
</li>

<style>
.link-card {
  list-style: none;
  display: flex;
  padding: 0.25rem;
  background-color: #23262d;
  border-radius: 0.6rem;
  margin-bottom: 1rem;
  transition: transform 0.2s ease-in-out;
}
.link-card:hover {
  transform: scale(1.025);
}
.link-card > a {
  width: 100%;
  text-decoration: none;
  line-height: 1.4;
  padding: 1rem 1.3rem;
  border-radius: 0.35rem;
  color: white;
  background-color: #23262d;
  opacity: 0.8;
  display: flex;
  align-items: center;
}
h2 {
  margin: 0;
  font-size: 1.25rem;
  display: flex;
  align-items: center;
  transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
}
.link-card:hover h2 {
  color: rgb(var(--accent-light));
}
.link-icon {
  width: 24px;
  height: 24px;
  margin-right: 0.5rem;
}
</style>
